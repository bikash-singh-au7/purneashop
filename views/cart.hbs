<div class="container-fluid mt-1">
    <div class="row px-1">
        <div class="col-md-6 m-auto table-responsive shadow-sm bg-white py-3">
            <h5 class="text-info text-center">Shopping Cart</h5>
            {{#if success}}
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6 m-auto alert alert-success">
                            {{success}}
                        </div>
                    </div>
                </div>
                {{/if}}
                {{#if cart.length}}
                    <h6 class="float-left">Product</h6>
                    <h6 class="float-right">Quantity</h6>
                    <br>
                    <hr>
                {{#each cart}}
                    <div class="row cart-items">
                        <div class="col-xs-4 col-md-4">
                            <a href="/updateCart/{{this.product_slag}}?action=remove" class="cart-remove"> <i class="fa fa-trash"></i> </a>
                            <img src="{{this.product_image}}"
                                class="card-img-top img-responsive image" alt="...">
                        </div>
                        <div class="col-xs-4 col-md-5">
                            <p class="title">
                                {{this.product_name}}
                            </p>
                            <p class="price">
                                {{this.qty}} x <i class="fa fa-inr"></i>{{this.product_price}} = <i class="fa fa-inr"></i>
                                {{this.subtotal}}
                            </p>
                        </div>
                        <div class="col-xs-4 col-md-3 update-cart">
                            <div class="form-inline p-0 m-0">
                                <div class="input-group m-0 p-0">
                                    <div class="input-group-prepend p-0">
                                        <div class="input-group-text p-0 m-0">
                                            <a href="/updateCart/{{this.product_slag}}?action=minus">
                                                <button class="btn btn-info">-</button>
                                            </a>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control" id="" value="{{this.qty}}">
                                    <div class="input-group-prepend p-0">
                                        <div class="input-group-text p-0 m-0">
                                            <a href="/updateCart/{{this.product_slag}}?action=add">
                                                <button class="btn btn-info">+</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                {{/each}}
                    <h6 class="">Cart Total</h6>
                    <hr>

                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <table class="table">
                                <tr>
                                    <td class="border-0 px-0 py-1">Total</td>
                                    <td class="border-0 px-0 py-1" align="right"><i class="fa fa-inr"></i> {{totalAmount}}</td>
                                </tr>
                            </table>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            {{#if order}}
                                <a href="/checkout" class="btn btn-info">Order Now</a>
                                <a href="/" class="btn btn-primary">Continue Shopping</a>
                            {{else}}
                                <button class="btn btn-info" id="makeOrder">Order Now</button>
                                <a href="/" class="btn btn-primary">Continue Shopping</a>
                                <div class="alert alert-warning mt-2" id="warning" style="display: none;">
                                    Your Order Amount is less then Rs 300, Please Add More Product then place your order.
                                </div>
                            {{/if}}
                            
                        </div>

                    </div>
                    <hr>
                {{else}}
                    <div class="alert alert-danger">
                        Cart is Empty
                    </div>
                    <div class=" text-right">
                        <a href="/" class="btn btn-info"> Start Shopping </a>
                    </div>
                {{/if}}
        </div>
    </div>
</div>



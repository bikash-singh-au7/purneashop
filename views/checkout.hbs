<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-6 m-auto">
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">
                        {{this}}
                    </div>
                {{/each}}
            {{/if}}
            <div class="shadow-sm p-3 bg-white">
                <div class="">
                    <h6 class="text-info text-center"> <i class="fa fa-send"></i> Confirm Your Order</h6>
                </div>
                <form action="/checkout" method="POST">

                    <div class="form-group">
                        <label for="">Select Address</label>
                        <select name="address" id="" class="form-control">
                            <option value="">Select </option>
                            {{#each list}}
                                <option value="{{this._id}}">{{this.user_name}} ({{this.address}}, {{this.locality}}, {{this.landmark}} {{this.address}}, {{this.locality}}, {{this.landmark}} )</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="">Payment Mode</label>
                        <select name="payment_mode" id="" class="form-control"> 
                            <option value="">Select Mode</option>
                            <option value="COD">COD</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info"> Order Confirm </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-10 m-auto p-0">
            {{#if success}}
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 m-auto alert alert-success">
                        {{success}}
                    </div>
                </div>
            </div>
            {{/if}}
            {{#if error}}
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12 m-auto alert alert-dange">
                        {{error}}
                    </div>
                </div>
            </div>
            {{/if}}
            {{#if list.length}}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 p-0">
                        <h5 class="text-light my-3 bg-info px-2 py-2">Confirmed/Unshipped Orders !!</h5>
                        <div id="accordion">
                            {{#each list as |item|}}
                                <div class="card mb-1 bg-white">
                                    <div class="card-header bg-white" id="headingOne{{@index}}">
                                        <div class="mb-0">
                                            <div class="title float-left text-info">
                                                <span> {{@index}} ) {{item.user_name}} (Status <span class="badge badge-success">{{item.order_status}}</span> ) 
                                                
                                            </div>
                                            <div class="toggle-button float-right">
                                                <button class="btn btn-warning m-0 py-1 px-2" data-toggle="collapse"
                                                    data-target="#collapseOne{{@index}}" aria-expanded="true"
                                                    aria-controls="collapseOne">
                                                    <i class="fa fa-angle-down"></i>
                                                </button>
                                                <a href="/admin/orderDelevered/{{item._id}}" title="Confirmed" class="btn btn-success px-2 py-1 text-light"> <i class="fa fa-edit"></i> </a>

                                                 <a href="/admin/orderDelete" title="Confirmed" class="btn btn-danger px-2 py-1 text-light"> <i class="fa fa-trash"></i> </a>
                                            </div>
                                        </div>
                                    </div>

                                    <div id="collapseOne{{@index}}" class="collapse" aria-labelledby="headingOne{{@index}}"
                                        data-parent="#accordion">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-12 p-0">
                                                    <div class="video-sections">
                                                        <div class="container">
                                                            <div class="row table-responsive">
                                                                <table class="table table-striped">
                                                                    <tr>
                                                                        <th>#SN</th>
                                                                        <th>Name</th>
                                                                        <th>Quantity</th>
                                                                        <th>Price</th>
                                                                        <th>Subtotal</th>
                                                                    </tr>
                                                                
                                                                    {{#each item.cart as |cart|}}
                                                                        <tr>
                                                                            <th>{{@index}}</th>
                                                                            <th> {{cart.product_name}} </th>
                                                                            <th> {{cart.qty}} </th>
                                                                            <th> {{cart.product_price}} </th>
                                                                            <th> {{cart.subtotal}} </th>
                                                                            
                                                                        </tr>
                                                                        
                                                                    {{/each}}
                                                                    <tr>
                                                                        <td colspan="5" align="right"> Total Amount <i class="fa fa-inr"></i> {{item.total_amount}} </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td colspan="5" align="right"> Order Date :    {{item.order_date}} </td>
                                                                    </tr>

                                                                    <tr>
                                                                        <td colspan="5" align="right" class="text-info"> Address :{{item.address.address}}, {{item.address.landmark}}, {{item.address.pincode}},
                                                                            <a class="badge badge-info" href="tel:{{item.address.user_mobile}}"> {{item.address.user_mobile}} </a> </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td colspan="5" align="right" class="text-info"> Mobile No: 
                                                                            <a class="badge badge-info" href="tel:{{item.user_mobile}}"> {{item.user_mobile}} </a> </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td colspan="5" align="right" class="text-info"> Order Id: {{item._id}}
                                                                            </td>
                                                                    </tr>
                                                                </table>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            {{else}}
            <div class="alert alert-danger">
                There is no Unshipped Order
            </div>
            {{/if}}
        </div>
    </div>
</div>
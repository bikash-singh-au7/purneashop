        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <hr>
        </div>
        <div class="col-md-6">
            <div class="social-icon">
                <a href="http://facebook.com/purneashop" target="_blank" class="btn btn-light"> <i class="fa fa-facebook"></i> </a>
                <a href="" class="btn btn-light"> <i class="fa fa-twitter"></i> </a>
                <a href="" class="btn btn-light"> <i class="fa fa-youtube"></i> </a>
            </div>
        </div>
        <div class="col-md-6">
            <p class="content text-light my-2">@ PurneaShop.com 2020 All Rights Reserved</p>
        </div>
    </div>

    <!-- child of the body tag -->
    <span id="top-link-block" class="hidden bg-danger" >
        <a href="#top" class="well well-sm" onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
            <i class="fa fa-angle-up px-2 py-1 "></i> 
        </a>
    </span><!-- /top-link-block -->

    <span id="whatsapp-icon" class="hidden bg-danger heartbeat">
        <a href="https://api.whatsapp.com/send?phone=+919472847479&text=Hi,%20I%20I%20am%20from%20your%20website%20">
            <i class="fa fa-whatsapp px-3 py-3"></i> 
        </a>
    </span><!-- /top-link-block -->
</div>

<script>
    // Only enable if the document has a long scroll bar
    // Note the window height + offset
    if (($(window).height() + 100) < $(document).height()) {
        $('#top-link-block').removeClass('hidden').affix({
            // how far to scroll down before link "slides" into view
            offset: { top: 100 }
        });
    }
</script>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-5 mx-auto py-3 px-5">
            
            <div class="shadow-sm bordered m-0 bg-white">
                <h5 class="text-info text-center p-2 m-0"> <i class="fa fa-user"></i> Login Here!!</h5>
                {{#if hasError}}
                    {{#each message}}
                        <div class="alert alert-danger">
                            {{this}}
                        </div>
                    {{/each}}
                {{/if}}

                
                <form action="/users/signin" id="signinForm" method="POST" class="p-3">
                    <div class="form-group">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}" class="form-control">    
                    </div>
                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="text" class="form-control" name="user_email">
                        <span class="error" id="user_email_error"></span>
                    </div>

                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" class="form-control" name="user_password">
                        <span class="error" id="user_password_error"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info">Sign In
                            <img id="addLoader" style="display:none" src="/images/loader/ajax-loader.gif" alt="">
                        </button>
                    </div>
                </form>
                <h6 class="text-right p-2">You don't have an Account <a href="/users/signup" class="text-info">Sign up Now</a></h6>
            </div>
        </div>
    </div>
</div>


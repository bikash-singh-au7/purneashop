<div class="container bg-light">
    {{!-- Alert Sections --}}
    <div class="row mt-2">
        <div class="col-md-12 m-auto my-2">
            <div class="row">
                {{#if success}}
                <div class="alert alert-success col-md-6 m-auto">
                    {{success}}
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    {{!-- Sale Sections --}}
    {{#if list.length}}
    <div class="row mx-0 product-card">
        <div class="col-md-12">
            <h6 class="heading">  <i class="fa fa-send"></i> ON SALE</h6>
            <hr>
        </div>
        {{#each list}}
        <div class="col-md-3 col-sm-6 col-xs-12 mb-2">
            <div class="card border-0 bg-none">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xs-3 col-md-12 text-center">
                            <span class="discount"> {{this.discount}}
                                <p class="p-0 m-0 text-white">Off</p>
                            </span>
                            
                            <a href="/products/{{this.product_slag}}" class="card-link card border-0">
                                <img src="{{this.product_image}}"
                                    class="card-img-top img-responsive image img-fluid" alt="...">
                            </a>
                        </div>
                        <div class="col-xs-9 col-md-12">

                            <div class="price text-info text-left">
                                <p class="dis-price font-weight-bold text-dark m-0">
                                    <i class="fa fa-inr"></i> {{this.product_price}}
                                </p>
                                <p class="mrp ml-3 text-muted m-0">
                                    <i class="fa fa-inr"></i> {{this.product_mrp}}
                                </p>
                                <p class="ml-3 text-muted m-0 font-weight-bold">
                                    ( Unit: {{this.product_unit}} )
                                </p>
                            </div>

                            <h5 class="card-title title text-info text-left">
                                <a href="/products/{{this.product_slag}}" class="card-link card border-0">
                                    {{this.product_name}}
                                </a>
                            </h5>

                            <div class="">
                                <div class="quantity">
                                    <button id="minus">-</button><input type="text" id="quantity" value="1"><button
                                        id="plus">+
                                    </button>

                                    <button class="btn btn-info border-0 rounded-0 add-to-kart"
                                        value="/addToCart/{{this.product_slag}}">
                                        Add to Cart <img id="cartLoader" style="display:none"
                                            src="/images/loader/ajax-loader.gif" alt="">
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mb-2">

                </div>
            </div>
        </div>

        {{/each}}
    </div>
    {{else}}
    <div class="row">
        <div class="col-md-12">
            <div class="card border-0">
                <div class="card-body">
                    <h6 class="text-danger">No Data Available in This Category</h6>
                </div>
            </div>
        </div>
    </div>
    {{/if}}


     {{!-- Shop By Category --}}
    <div class="row mt-2 product-card mx-0">
        <div class="col-md-12">
            <h6 class="heading"> <i class="fa fa-shopping-cart"></i> OUR CATEGORIES </h6>
            <hr>
        </div>
        {{#if catList.length}}
        {{#each catList}}
        <div class="col-md-3 col-xs-6 px-1 mt-2">
            <a href="/category/{{this._id}}" title="{{this.category_name}}">
                <div class="card bg-white border-0 rounded-0 shadow-sm">
                    <div class="card-body bg-info">
                        <h6 class="text-center text-white pt-3 content">
                            {{this.category_name}} <i class="fa fa-angle-double-right"></i>
                        </h6>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
        {{else}}
        {{/if}}
    </div>




    {{!-- Show Product Category Wise --}}

    {{#each categoryWise as |arr|}}
    {{#if arr.length}}
    <div class="row mx-0 product-card mt-2 mb-2">
        <div class="col-md-12">
            <h6 class="heading">  <i class="fa fa-send"></i> {{@key}} </h6>
            <hr>
        </div>
        {{#each arr}}
        <div class="col-md-3 col-sm-6 col-xs-12 px-1 mb-2">
            <div class="card border-0 product-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xs-3 col-md-12 text-center">
                            <span class="discount"> {{this.discount}}
                                <p class="p-0 m-0 text-white">Off</p>
                            </span>
                            {{!-- <img src="/images/logo/shop-logo.png" class="card-img-top img-responsive image" alt="..."> --}}
                            <a href="/products/{{this.product_slag}}" class="card-link card border-0">
                                <img src="{{this.product_image}}"
                                    class="card-img-top img-responsive image img-fluid" alt="...">
                            </a>
                        </div>
                        <div class="col-xs-9 col-md-12">

                            <div class="price text-info text-left">
                                <p class="dis-price font-weight-bold text-dark m-0">
                                    <i class="fa fa-inr"></i> {{this.product_price}}
                                </p>
                                <p class="mrp ml-3 text-muted m-0">
                                    <i class="fa fa-inr"></i> {{this.product_mrp}}
                                </p>
                                <p class="ml-3 text-muted m-0 font-weight-bold">
                                    ( Unit: {{this.product_unit}} )
                                </p>
                            </div>

                            <h5 class="card-title title text-info text-left">
                                <a href="/products/{{this.product_slag}}" class="card-link card border-0">
                                    {{this.product_name}}
                                </a>
                            </h5>

                            <div class="">
                                <div class="quantity">
                                    <button id="minus">-</button><input type="text" id="quantity" value="1"><button
                                        id="plus">+
                                    </button>

                                    <button class="btn btn-info border-0 rounded-0 add-to-kart"
                                        value="/addToCart/{{this.product_slag}}">
                                        Add to Cart <img id="cartLoader" style="display:none"
                                            src="/images/loader/ajax-loader.gif" alt="">
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mb-2">

                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    {{/if}}
    {{/each}}


   

</div>


<script>

    $(".quantity").on("click", "#minus", function () {
        let parent = $(this).parent()
        let value = Number(parent.find("input").val());
        if (value <= 1) {
            parent.find("input").val(1);
        } else {
            value -= 1;
            parent.find("input").val(value);
        }

    });

    $(".quantity").on("click", "#plus", function () {
        let parent = $(this).parent()
        let value = Number(parent.find("input").val());
        value += 1;
        parent.find("input").val(value);

    });

    $(".quantity").on("click", ".add-to-kart", function () {
        let parent = $(this).parent()
        let value = Number(parent.find("input").val());
        let url = $(this).val();
        $.ajax({
            url: url,
            data: { qty: value },
            type: "GET",
            dataType: "json",
            beforeSend: function () {
                parent.find("#cartLoader").show();
            },
            complete: function () {
                parent.find("#cartLoader").hide();
            },
            success: function (response) {
                if (response["status"]) {
                    parent.find("#cartLoader").hide();
                    $(".myCart").html(response["cart"].length);
                    parent.html("<a href='/yourCart' class='btn btn-info border-0 rounded-0'>View Cart <i class='fa fa-arrow-right'></i> </a>");
                }
            }
        });
    });

    $('.carousel.carousel-multi-item.v-2 .carousel-item').each(function () {
        var next = $(this).next();
        if (!next.length) {
            next = $(this).siblings(':first');
        }
        next.children(':first-child').clone().appendTo($(this));

        for (var i = 0; i < 3; i++) {
            next = next.next();
            if (!next.length) {
                next = $(this).siblings(':first');
            }
            next.children(':first-child').clone().appendTo($(this));
        }
    });
</script>